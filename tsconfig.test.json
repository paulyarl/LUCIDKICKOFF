{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "react", "react-dom", "vitest"],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "include": [
    "tests/**/*.test.ts",
    "tests/**/*.test.tsx",
    "tests/unit/**/*.ts",
    "tests/unit/**/*.tsx",
    "types/**/*.d.ts"
  ]
}
