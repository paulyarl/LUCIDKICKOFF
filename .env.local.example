# =======================================
# Required Configuration
# =======================================

# Supabase Configuration
# Get these from your Supabase project settings -> API
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =======================================
# Analytics & Monitoring
# =======================================

# PostHog Configuration
# Get these from your PostHog project settings
NEXT_PUBLIC_POSTHOG_KEY=ph_your_public_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com  # Or your self-hosted instance

# Sentry Configuration
# Get these from your Sentry project settings
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/your-project-id
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here  # For source maps upload

# =======================================
# Environment & Deployment
# =======================================

# Node Environment (development, test, production)
NODE_ENV=development

# App Version (for release tracking in Sentry/PostHog)
NEXT_PUBLIC_APP_VERSION=1.0.0

# =======================================
# Feature Flags & Settings
# =======================================

# Enable/disable analytics in development
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable/disable error tracking in development
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=false

# Enable/disable performance monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# =======================================
# Debugging
# =======================================

# Enable debug logging for analytics
NEXT_PUBLIC_DEBUG_ANALYTICS=false

# Enable debug logging for Sentry
NEXT_PUBLIC_DEBUG_SENTRY=false

# =======================================
# Rate Limiting & Throttling
# =======================================

# Maximum number of events per minute
NEXT_PUBLIC_ANALYTICS_MAX_EVENTS_PER_MINUTE=1000

# Sample rate for performance traces (0.0 to 1.0)
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1

# Sample rate for session replays (0.0 to 1.0)
NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# =======================================
# Demo Seeding (Server-side only; DO NOT commit real values)
# =======================================
# Used by scripts/seed-demo-users.js via `npm run seed:demo`
# These must NOT be prefixed with NEXT_PUBLIC
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Demo account credentials (throwaway only)
DEMO_ADMIN_EMAIL=admin@example.com
DEMO_ADMIN_PASSWORD=changeme
DEMO_PARENT_EMAIL=parent@example.com
DEMO_PARENT_PASSWORD=changeme
DEMO_CHILD_EMAIL=child@example.com
DEMO_CHILD_PASSWORD=changeme
