{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/pack",
        "http://localhost:3000/pack/basics",
        "http://localhost:3000/learn/lesson/line-control-1/run",
        "http://localhost:3000/tutorial/friendly-lion/run"
      ],
      "startServerCommand": "npm run start",
      "startServerReadyPattern": "ready - started server on",
      "numberOfRuns": 3,
      "settings": {
        "onlyCategories": ["performance", "accessibility", "best-practices", "seo"],
        "skipAudits": ["uses-http2"],
        "chromeFlags": "--no-sandbox --headless --disable-gpu --disable-dev-shm-usage",
        "budgetsPath": ".github/budgets.json"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.85}],
        "categories:accessibility": ["error", {"minScore": 0.9}],
        "categories:best-practices": ["error", {"minScore": 0.9}],
        "categories:seo": ["error", {"minScore": 0.9}],
        "tap-targets": ["warn", {"minScore": 1}],
        "color-contrast": ["warn", {"minScore": 1}],
        "label": ["warn", {"minScore": 1}],
        "first-contentful-paint": ["error", {"maxNumericValue": 2500, "aggregationMethod": "median"}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 3000, "aggregationMethod": "median"}],
        "speed-index": ["error", {"maxNumericValue": 3000, "aggregationMethod": "median"}],
        "total-blocking-time": ["error", {"maxNumericValue": 200, "aggregationMethod": "median"}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1, "aggregationMethod": "median"}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
